<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="12dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:id="@+id/username_for_userlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="username"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/email_for_userlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Email"
                android:textSize="18dp"
                android:layout_margin="5dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/description_for_userlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:maxLines="1"
                    android:text="Description"
                    android:autoSizeMaxTextSize="10dp"/>


            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tags_for_userlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:text="Tags"
                android:textSize="15dp"
                android:textColor="#779ecb"
                android:textStyle="bold" />



            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:background="?android:attr/listDivider" />


            <Button
                android:id="@+id/connect_user_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="Connect"
                android:textColor="#FFF"
                android:textAllCaps="false"
                android:backgroundTint="#77dd77"
                android:visibility="gone"/>

            <Button
                android:id="@+id/redirect_to_whatsapp_user_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="Message"
                android:textColor="#FFF"
                android:textAllCaps="false"
                android:backgroundTint="#77dd77"
                android:visibility="gone"/>

            <Button
                android:id="@+id/accept_user_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="Accept Request"
                android:textColor="#FFF"
                android:textAllCaps="false"
                android:backgroundTint="#ff6961"
                android:visibility="gone"/>

            <Button
                android:id="@+id/pending_user_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textColor="#FFF"
                android:text="Request Pending"
                android:textAllCaps="false"
                android:visibility="gone"/>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>